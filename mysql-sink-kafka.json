      "key.converter.schemas.enable": "true",
      "errors.tolerance": "all",
      "errors.log.include.messages": true,
      "connection.attempts": "6",
      "connection.backoff.ms": "1000",
      "connection.url": "jdbc:mysql://146.148.106.71:3306/demo?nullCatalogMeansCurrent=true&autoReconnect=true&useSSL=false",
      "connection.user": "root",
      "connection.password": "kafka-class-db-002",
      "dialect.name": "MySqlDatabaseDialect",
      "insert.mode": "upsert",
      "delete.enabled" : "true",
      "batch.size": "2",
      "table.name.format": "movies",
      "pk.mode": "record_key",
      "pk.fields": "movie_id",
      "auto.create": "true",
      "auto.evolve": "true",
      "db.timezone": "Asia/Bangkok"
    }
